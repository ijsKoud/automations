{
	"extends": ["@sapphire/ts-config", "@sapphire/ts-config/extra-strict", "@sapphire/ts-config/verbatim"],
	"compilerOptions": {
		"outDir": "./dist",
		"noUnusedParameters": false,
		"useUnknownInCatchVariables": false,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"baseUrl": "./src",
		"paths": {
			"#database/*": ["./database/*"],
			"#lib/*": ["./lib/*"]
		}
	},
	"exclude": ["node_modules"],
	"include": ["./src/**/*"]
}
